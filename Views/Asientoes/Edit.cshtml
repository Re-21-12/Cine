@model Cine.Models.Asiento

@{
    ViewData["Title"] = "Editar Asiento";
}

<h1>Editando Asiento @Model.NumeroAsiento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Disponible">Disponible</option>
                    <option value="Ocupado">Ocupado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroSala" class="control-label"></label>
                <select asp-for="NumeroSala" class="form-control" asp-items="ViewBag.NumeroSala"></select>
                <span asp-validation-for="NumeroSala" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="NumeroAsiento" />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class=" btn btn-danger" style="margin-top:5px">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
